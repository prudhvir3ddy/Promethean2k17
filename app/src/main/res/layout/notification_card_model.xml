<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:layout_margin="5dp">
            <!--    <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    android:id="@+id/home_card_img"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    /> -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frstimg"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:id="@+id/home_card_img"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="4dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="10"
                    android:elevation="15dp"
                    app:civ_shadow_color="#8BC34A"
                    />

                <ProgressBar
                    android:id="@+id/progress"
                    android:visibility="visible"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:foregroundGravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Heading"
                android:id="@+id/home_card_heading"
                android:layout_marginTop="12dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignTop="@+id/frstimg"
                android:layout_toRightOf="@+id/frstimg"
                android:layout_toEndOf="@+id/frstimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="timestamp"
                android:id="@+id/home_card_timestamp"
                android:paddingLeft="5dp"
                android:layout_below="@+id/home_card_heading"
                android:layout_alignLeft="@+id/home_card_heading"
                android:layout_alignStart="@+id/home_card_heading"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TAG"
                android:id="@+id/home_card_tag"
                android:textColor="#000000"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>