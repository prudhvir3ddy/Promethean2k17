<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel_lay">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/c1"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:id="@+id/eventimg"
                    android:src="@drawable/event"/>
                <ProgressBar
                    android:id="@+id/progress"
                    android:visibility="visible"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:foregroundGravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c1"
            app:cardElevation="10dp"
            android:id="@+id/c2"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/desc_r1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Description :"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginTop="6dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <TextView
                    android:text="DESCRIPTION"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventdescription"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/desc_r1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c2"
            app:cardElevation="10dp"
            android:id="@+id/c3"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/desc_r2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Rules :"
                        android:layout_marginTop="6dp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <TextView
                    android:text="RULES"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventrules"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/desc_r2"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c3"
            app:cardElevation="10dp"
            android:id="@+id/c4"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="NO_OF_PRTPCTNS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noparticipants"
                    android:textStyle="bold"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_marginLeft="37dp"
                    android:layout_marginStart="37dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No: of Participants :"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="17dp"
                    android:id="@+id/textView2"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="38dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Price Per Head :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:id="@+id/textView7"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignRight="@+id/textView2" />

                <TextView
                    android:text="Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/price_per_head"
                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_alignBaseline="@+id/textView7"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_alignLeft="@+id/noparticipants"
                    android:layout_alignStart="@+id/noparticipants" />

                <TextView
                    android:text="ENTRY DETAILS :"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView10" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c4"
            app:cardElevation="10dp"
            android:id="@+id/c5"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CO_NAME_1"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginLeft="17dp"
                    android:id="@+id/CO_NAME_1"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="38dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="CO_NAME_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:id="@+id/CO_NAME_2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/CO_NAME_1"
                    android:layout_alignRight="@+id/CO_NAME_1" />

                <TextView
                    android:text="Co-Ordinators :"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView12" />

                <TextView
                    android:text="co_no_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/CO_NO_1"
                    android:textStyle="bold"
                    android:layout_marginLeft="86dp"
                    android:clickable="true"
                    android:textColor="#4169e1"
                    android:layout_marginStart="86dp"
                    android:layout_alignBaseline="@+id/CO_NAME_1"
                    android:layout_alignBottom="@+id/CO_NAME_1"
                    android:layout_alignLeft="@+id/textView12"
                    android:layout_alignStart="@+id/textView12" />

                <TextView
                    android:text="co_no_2"
                    android:layout_width="wrap_content"
                    android:textColor="#4169e1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/CO_NO_2"
                    android:textColorHighlight="@color/color_success"
                    android:clickable="true"
                    android:layout_alignBaseline="@+id/CO_NAME_2"
                    android:layout_alignBottom="@+id/CO_NAME_2"
                    android:layout_alignRight="@+id/CO_NO_1"
                    android:layout_alignEnd="@+id/CO_NO_1" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c5"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/c6">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/referrer"
                    android:hint="Referrer's Email Or Name(optional)"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c6"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/c7">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/noter1"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:id="@+id/t1"
                        android:textColor="#ff0000"
                        android:gravity="center_vertical"
                        android:text="NOTE : All the Payments shall be made at the venue on the days of Promethean'17\n
                                         "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/t1"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="#ff0000"
                        android:text="Hurry, Register Now !"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c7"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/terms_checkbox"
                android:enabled="false"
                android:id="@+id/eventslotbtn"
                android:text="Register My Slot"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/terms_checkbox"
                android:text="I Accept the terms or rules mentioned above."
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>